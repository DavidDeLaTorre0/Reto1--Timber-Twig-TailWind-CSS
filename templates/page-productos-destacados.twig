{% extends "base.twig" %}

	{% block content %}
  		<h1 class="text-5xl my-6">NUESTROS PRODUCTOS</h1>
			<!-- Usa el post.link para que entre en ese producto -->
				<div class="flex inline-block">
			{% for post in allposts %}
					<a href="{{post.link}}">
						<div class="flex flex-col md:max-w-xl rounded-lg bg-white shadow-lg">
							<img class="mx-24 w-full h-auto md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" src={{post.thumbnail.src}}  alt="foto-{{post.title}}" />
							<div class="p-6 flex flex-col justify-start">
								<h5 class="text-gray-900 text-xl font-medium mb-2">{{post.title}}</h5>
								<p class="text-gray-700 text-base mb-4">
									{{post.get_content}}
								</p>
								<p class="text-gray-600 text-xs">Precio: {{post.precio}} â‚¬</p>
							</div>
						</div>
					</a>
			{% endfor %}
			</div>
	{% endblock %}
	